{
  "name": "openclaw-desktop",
  "version": "1.0.0",
  "description": "OpenClaw 家庭助手 - 桌面客户端",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": ["electron", "openclaw", "assistant"],
  "author": "OpenClaw Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.openclaw.desktop",
    "productName": "OpenClaw 家庭助手",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
